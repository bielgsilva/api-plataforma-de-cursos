{
  "version": 2,
  "builds": [
    { "src": "src/server/index.js", "use": "@now/node-server" }
  ],
  "routes": [
    { "src": "/favicon.ico", "dest": "/path/to/your/favicon.ico" },
    { "src": "/(.*)", "dest": "src/server/index.js" }
  ],
  "env": {
    "PORT": "3000"
  },
  "functions": {
    "api/**/*.js": {
      "runtime": "@now/node-server"
    }
  }
}
